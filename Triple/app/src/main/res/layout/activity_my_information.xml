<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infobox"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/photo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/infotxt"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/photo"
                    android:paddingLeft="10dip"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_centerVertical="true"
                        android:text="김동호"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp" >

                        <TextView
                            android:id="@+id/explorer"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:text="탐험가"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/level"
                            android:textColor="@color/theme_primary_light"
                            android:text="LV4"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="80dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/badgeText"
                android:text="획득한 뱃지"
                android:textAlignment="center"
                android:textSize="30dp"
                android:background="@color/theme_primary_light"
                android:textColor="@color/white"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/infobox"
                android:layout_alignStart="@+id/tableLayout" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/badgeText"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:id="@+id/tableLayout">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bdg1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:id="@+id/cntOfBdg1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
